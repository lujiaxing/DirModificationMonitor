<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
    <section name="dirMonitor" type="DMM.Common.Configuration.MonitorationsConfigurationHandler,DMM.Common"/>
  </configSections>
  <log4net>
    <!--错误日志配置-->
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log\\LogError\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="100"/>
      <param name="MaxFileSize" value="10240"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;"/>
      <param name="RollingStyle" value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%nErrorTime：%d [%t] %nLevel：%-5p %nClass：%c [%x] %n%m %n "/>
      </layout>
    </appender>
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Log\\LogInfo\\"/>
      <param name="AppendToFile" value="true"/>
      <param name="MaxSizeRollBackups" value="100"/>
      <param name="MaxFileSize" value="10240"/>
      <param name="StaticLogFileName" value="false"/>
      <param name="DatePattern" value="yyyyMMdd&quot;.txt&quot;"/>
      <param name="RollingStyle" value="Date"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%nTime：%d [%t] %nLevel：%-5p %nMessage：%c [%x] %n%m %n "/>
      </layout>
    </appender>
    <logger name="logerror">
      <level value="ERROR"/>
      <appender-ref ref="ErrorAppender"/>
    </logger>
    <logger name="loginfo">
      <level value="INFO"/>
      <appender-ref ref="InfoAppender"/>
    </logger>
  </log4net>
  <dirMonitor>
    <monitorations>
      <monitoration path="F:\UPLOAD" currentLevelOnly="true">
        <behaviors>
          <behavior type="DMM.AutoBakup.AutoBakupBehavior,DMM.AutoBakup" file="DMM.AutoBakup.dll" enable="true" isAsync="false">
            <parameters>
              <parameter key="ExtactProgram" value="D:\System\WinRAR\WinRAR.EXE"/>
              <parameter key="ExtactProgramArg" value="x &quot;$TARGET_FILE$&quot; &quot;{0}&quot; -y"/>
              <parameter key="ExtactPath" value="F:\Extacted\"/>
              <parameter key="WebSiteBasePath" value="F:\TEST_PROGRAMDIR"/>
              <parameter key="BakupBasePath" value="F:\BAKUP\"/>
            </parameters>
          </behavior>
        </behaviors>
      </monitoration>
    </monitorations>
  </dirMonitor>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
